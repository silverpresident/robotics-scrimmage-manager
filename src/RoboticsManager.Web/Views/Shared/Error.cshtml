@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="bi bi-exclamation-triangle"></i> Error
        </h4>
    </div>
    <div class="card-body">
        @if (Model?.ShowRequestId ?? false)
        {
            <div class="alert alert-info">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </div>
        }

        @if (Model?.StatusCode == 404)
        {
            <h2>Page Not Found</h2>
            <p class="text-muted">
                The page you're looking for doesn't exist or has been moved.
            </p>
        }
        else if (Model?.StatusCode == 403)
        {
            <h2>Access Denied</h2>
            <p class="text-muted">
                You don't have permission to access this resource.
            </p>
        }
        else
        {
            <h2>An Error Occurred</h2>
            <p class="text-muted">
                Sorry, an error occurred while processing your request.
            </p>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house"></i> Return Home
            </a>
            <button class="btn btn-outline-secondary" onclick="history.back()">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>
        </div>
    </div>
</div>

@if (Model?.ShowStackTrace ?? false)
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Technical Details</h5>
        </div>
        <div class="card-body">
            <pre class="error-details">@Model.StackTrace</pre>
        </div>
    </div>
}

<style>
    .error-details {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        white-space: pre-wrap;
        word-wrap: break-word;
        max-height: 300px;
        overflow-y: auto;
    }

    .error-details::-webkit-scrollbar {
        width: 6px;
    }

    .error-details::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .error-details::-webkit-scrollbar-thumb {
        background: var(--primary-color);
        border-radius: 3px;
    }

    .error-details::-webkit-scrollbar-thumb:hover {
        background: var(--secondary-color);
    }
</style>
